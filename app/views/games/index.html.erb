


<head>
<h1>Listing Games</h1>

</head>


 
<body>

  <%= button_to "Matches", matches_path, method: :get %>
  <%= button_to "New Match", new_match_path, method: :get %>
  <%= link_to "New Game", new_game_path, method: :get %> 

  <h4> The best is yet to come </h4>


  <h2>Listing Games</h2>

  <table style="width:75%;border:3px solid black">
  <th style="border:1px solid black"> <h2> Game Name</h2> </th>
  <th style="border:1px solid black"> <h2> Number of Players</h2> </th>

  <% @games.each do |game| %>
    <tr style="border:1px solid black">
      <td style="border:1px solid black"><h4>  <%= game.name %>       </h4></td>
      <td style="border:1px solid black"><h4>  <%= game.number_of_players %>     </h4></td>
    </tr>
  <% end %>
</body>

</html>
